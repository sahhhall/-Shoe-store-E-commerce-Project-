<%- include('../layouts/user/header.ejs') -%>

<div class="container">
    <section class=" d-flex justify-content-center align-items-center p-4">
        <!-- Login Form -->
        <div class="col col-md-8 col-lg-6 col-xxl-5">
            <!-- Logo -->       
            <a class="navbar-brand fw-bold fs-3 flex-shrink-0 order-0 align-self-center justify-content-center d-flex mx-0 px-0" >
                <div class="d-flex align-items-center">
                    <svg class="f-w-7" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 77.53 72.26">
                        <path d="M10.43,54.2h0L0,36.13,10.43,18.06,20.86,0H41.72L10.43,54.2Zm67.1-7.83L73,54.2,68.49,62,45,48.47,31.29,72.26H20.86l-5.22-9L52.15,0H62.58l5.21,9L54.06,32.82,77.53,46.37Z" fill="currentColor" fill-rule="evenodd"/>
                    </svg>
                </div>
            </a>
            <!-- /Logo -->
            <div class="shadow-xl p-4 p-lg-5 bg-white">
                <h1 class="text-center mb-5 fs-2 fw-bold">Open Account</h1>
                <% if (messages.exist) { %>
                    <div class="alert alert-danger d-flex align-items-center" role="alert" id="existAlert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 " viewBox="0 0 16 16" role="img" aria-label="Warning:">
                          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        <div >
                            <strong>Hey !</strong>
                          <%= messages.exist %>
                          
                        </div>
                      </div>
                      
                    
                <% } %>
                <% if (messages.usernameexist) { %>
                    <div class="alert alert-danger d-flex align-items-center" role="alert" id="usernameExistAlert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 " viewBox="0 0 16 16" role="img" aria-label="Warning:">
                          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        <div >
                            <strong>Hey !</strong>
                          <%= messages.usernameexist %>
                          
                        </div>
                      </div>
                      
                    
                <% } %>
                <form action="" method="post"  onsubmit="return validate()">
                    <div class="form-group col-12">
                        
                        <input type="text" class="form-control" name="name" placeholder="Enter your name" id="uname" autofocus required >
                        <div id="userError" class="forml" style="color: red;"></div>
                    </div>
                 
                    <div class=" form-group col-12">
                      
                        <input type="email" class="form-control" name="email" placeholder="name@email.com" id="umail" required >
                   
                    </div>
                    <div class="form-group col-12">
                        
                        <input type="tel" class="form-control" name="mobile" placeholder="Enter your mobile number" id="uphone" required >
                        <div id="phoneErr" class="forml" style="color: red;"></div>
                    </div>
                    <div class=" form-group col-12">
                       
                        <input type="password" class="form-control" name="fpassword" placeholder="Enter your password" id="pass" required >
                        <div id="passwordError" class="forml" style="color: red;"></div>
                    </div>
                    <div class=" form-group col-12">
                       
                        <input type="password" class="form-control" name="password" placeholder="Re enter your password" id="confpass" required >
                        <div id="passwordError2" class="forml" style="color: red;"></div>
                    </div>
                  <div style="margin-top: -20px; " class="passreq">
                    <p >password requirements: <br>
                   
                       <small class="text-muted "> • Minimum 6 characters</small><br>
                       <small class="text-muted "> • At least one capital letter</small><br>
                       <small class="text-muted"> • At least one number</small><br>
                    
                      
                     
                  </div>
                    <button type="submit" class="btn btn-dark d-block w-100 my-4">Sign Up</button>
                </form>
               
                <p class="small text-center mt-2 pt-1 mb-0 text-muted login-p">Already registered?   <a href="/signin"
                    class="login-p text-primary">login here.</a></p>
            </div>
        </div>
        <!-- /Login Form -->
    </section>
</div>
<script src="/static/js/admin/form-validation-and-fetch.js"></script>


<%- include('../layouts/user/footer.ejs') -%>

